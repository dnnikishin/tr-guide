{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "ES2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "resolveJsonModule": true,
    "esModuleInterop": true
  },
  "lib": [
    "ES2017",
    "dom"
  ],
  "types": [
    "reflect-metadata",
    "jest",
    "node"
  ],
  "allowJs": false,
  "exclude": [
    "node_modules",
    "dist"
  ],
  //  "include": [
  //    "./src/**/*.ts",
  //    "*.json"
  //  ]
}
